{
  "compilerOptions": {
    "module": "ES2022",
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["ES2022","DOM"],
    "target" : "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "*": ["./src/*"]
    },
    // Add these new options
    "emitDecoratorMetadata": false,
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false
  }
}